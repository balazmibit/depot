<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Zoznam produktov</h1>
<p>Pristup:<%= session[:counter] %></p>
<p>Aktualne ID kosika je: <%= session[:cart_id] %></p>

<% @products.each do |product| %>
	<div class="entry">
		<%= link_to image_tag(product.image_url), line_items_path(:product_id => product), method: :create  %>
		<h3><%= product.title %></h3>
		<%= sanitize(product.description) %>
		<div class="price_line">
			<span class="price"><%= number_to_currency(product.price, :locale => :sk) %></span>
			<%= button_to 'Pridat do kosika', line_items_path(:product_id => product) %>
		</div>
	</div>
<% end %>
